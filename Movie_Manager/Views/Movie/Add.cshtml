@model MovieManager.BLL.Entities.Movie
@{
}

<h2>Filme</h2>
<hr />

@using (Html.BeginForm("Create", "Movie", FormMethod.Post))
{
    <div class="row">
        <div class=" col-md-4">
            <form asp-action="Add">
                <div>
                    <label asp-for="Name" class="control-label"> Nome</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div>
                    <label asp-for="Director" class="control-label">Diretor </label>
                    <input asp-for="Director" class="form-control" />
                </div>
                <div>
                    <label asp-for="RentalValue" class="control-label">Valor de locação</label>
                    <input asp-for="RentalValue" class="form-control" />
                </div>
                <div>
                    <label asp-for="MovieKind" class="control-label">Categoria de filme</label>
                    <input asp-for="MovieKind" class="form-control" />
                </div>
                <div>
                    <label asp-for="Description" class="control-label">Descricao</label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <div>
                    <label asp-for="Duration" class="control-label">Duracao/m</label>
                    <input asp-for="Duration" class="form-control" />
                </div>
                <div>
                    <label asp-for="AgeGroup" class="control-label">Grupo de idade</label>
                    <input asp-for="AgeGroup" class="form-control" />
                </div>
                <div class="form-group">
                    <a asp-action="Index"> <button style="background: #006400; border-radius: 4px; padding: 8px; cursor: pointer; color: #fff; border: none; font-size: 16px;">Salvar</button></a>
                </div>
            </form>
        </div>
    </div>
}
