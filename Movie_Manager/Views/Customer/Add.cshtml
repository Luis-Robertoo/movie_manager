@model MovieManager.BLL.Entities.Customer
@{
    ViewData["Title"] = "Adicionar";
}

<h2>@ViewData["Title"]</h2>

<h4>Usuario</h4>
<hr />

@using (Html.BeginForm("Create", "Customer", FormMethod.Post))
{
    <div class="row">
        <div class=" col-md-4">
            <form asp-action="Add">
                <div>
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div>
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                </div>
                <div>
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div>
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div>
                    <a asp-action="Save"><button style="background: #006400; border-radius: 4px;bottom: 0px; padding: 6px 8py; cursor: pointer; color: #fff; border: none; font-size: 16px;">Salvar</button></a>
                </div>
            </form>
        </div>
    </div>
}
