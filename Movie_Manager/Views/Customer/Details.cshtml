@model MovieManager.BLL.Entities.Customer
@{
}

<div style="text-align:left;">
    <h4> Cliente</h4>
    <hr />
    <dl>
        <div>
            <label asp-for="Name" class="control-label">Nome</label>
            <input asp-for="Name" class="form-control"/>
        </div>
         <div>
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control"/>
        </div>
       <div>
            <label asp-for="Age" class="control-label">Idade</label>
            <input asp-for="Age" class="form-control"/>
        </div>
        <div>
            <label asp-for="Phone" class="control-label">Telefone</label>
            <input asp-for="Phone" class="form-control"/>
        </div>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default"> <button style="background: #00010f; border-radius: 4px; padding: 8px; cursor: pointer; color: #fff; border: none; font-size: 16px;">Editar</button></a>
        <a asp-action="Index"> <button style="background: #FF1000; border-radius: 4px; padding: 8px; cursor: pointer; color: #fff; border: none; font-size: 16px;">Voltar</button></a>
    </div>
</div>
