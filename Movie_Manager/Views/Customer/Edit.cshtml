@model MovieManager.BLL.Entities.Customer
@{
}

<div class="row">
    <div class=" col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div
                 <label asp-for="Name" class="control-label"></label>
                 <input asp-for="Name" class="form-control"/>
            </div>
            <div
                 <label asp-for="Email" class="control-label"></label>
                 <input asp-for="Email" class="form-control"/>
            </div>
            <div
                 <label asp-for="Age" class="control-label"></label>
                 <input asp-for="Age" class="form-control"/>
            </div>
            <div
                 <label asp-for="Phone" class="control-label"></label>
                 <input asp-for="Phone" class="form-control"/>
            </div>
            <div class="form-group">
                <div class="col-sm-10" style="padding: 6px 8py margin-top: 100">
                    <a asp-action="Index"><button style="background: #FF1000; border-radius: 4px; padding: 6px 8py; cursor: pointer; color: #fff; border: none; font-size: 16px;">Voltar</button></a>

                    <a asp-action="Save"><button style="background: #006400; border-radius: 4px;bottom: 0px; padding: 6px 8py; cursor: pointer; color: #fff; border: none; font-size: 16px;">Salvar</button></a>

                </div>
            </div>
        </form>
    </div>
</div>

